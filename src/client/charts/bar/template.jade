svg.chart.chart-bar(
    width='100%'
    height='100%'
    graph-scales="{\
        x: ['linear', $chartData.$x.$min, $chartData.$x.$max],\
        y: ['linear', $chartData.$y.$max, $chartData.$y.$min],\
    }"
    shape-rendering="geometricPrecision"
)
    g.decor
    g.graph
        path.line(
            draw-path=" chartData | path:$chartOptions:$scales.x:$scales.y "
        )
        g.point(
            ng-repeat="point in chartData"
            style="\
                transform: translate(\
                    {{ $scales.x($chartOptions.x(point)) }}px, \
                    {{ $scales.y($chartOptions.y(point)) }}px \
                )\
            }"
        )
            circle( cx=0, cy=0, r=4 )
