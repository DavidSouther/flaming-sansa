svg(
    width="100%"
    height="100%"
    style="display: block"
)
    marker(
        id="marker_{{$id}}"
        viewBox="0 0 10 10" 
        refX="10"
        refY="5"
        markerWidth="6" 
        markerHeight="6"
        orient="auto"
        markerUnits="strokeWidth"
    )
        path(
            d="M 0 0 L 10 5 L 0 10 z"
            ng-attr-fill="{{ color }}"
        )
    line(
        from="{{start}}"
        to="{{end}}"
        stroke-width="2px"
        ng-attr-stroke="{{ color }}"
        marker-end="url(#marker_{{$id}})"
    )
